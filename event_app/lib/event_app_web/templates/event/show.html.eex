<!-- based on lecture notes of professor Nat Tuck -->
<h1>Show Event</h1>

<ul>

    <li>
        <strong>Name:</strong>
        <%= @event.name %>
    </li>

    <li>
        <strong>Date:</strong>
        <%= @event.date %>
    </li>

    <li>
        <strong>Description:</strong>
        <%= @event.description %>
    </li>

    <li>
        <strong>Invited:</strong>
        <%= @event.subscribers %>
    </li>

</ul>

<!-- Show edit button only if current user logged in == check if user info stored in the connection
is the same as the user_id of this event -->
<%= if current_user_id?(@conn, @event.user_id) do %>
<span><%= link "Edit", to: Routes.event_path(@conn, :edit, @event) %></span>
<% end %>

<h2>Add Comment</h2>
<%= if (have_current_user?(@conn)) do %>
<%= render(
EventAppWeb.CommentView,
"form.html",
changeset: @new_comment,
action: Routes.comment_path(@conn, :create)
) %>
<% end %>

<!-- TODO change to satisfy assignment need -->
<h2>Add Response</h2>
<%= if (have_current_user?(@conn)) do %>
<%= render(
EventAppWeb.ResponseView,
"form.html",
changeset: @new_response,
action: Routes.response_path(@conn, :create)
) %>
<% end %>


<!-- TODO change to satisfy assignment need -->
<h2>Add Update</h2>
<%= if (have_current_user?(@conn)) do %>
<%= render(
EventAppWeb.UpdateView,
"form.html",
changeset: @new_update,
action: Routes.update_path(@conn, :create)
) %>
<% end %>




<h2>Comments</h2>
<%= for comm <- @event.comments do %>
<div class="card">
    <div class="card-body">
        <p>Posted by <%= comm.user.name %></p>
        <p class="card-text"><%= comm.body %></p>
    </div>
</div>
<% end %>

<!-- TODO change to satisfy assignment need -->
