<h1>Listing Events</h1>

<div class="container">
    <%= for event <- @events do %>
    <div class="card">
        <div class="card-body">
            <p>Name:<%= event.name %></p>
            <p>Date:<%= event.date %></p>
            <p>Description:<%= event.description %></p>
        </div>
    </div>
</div>

<% end %>
