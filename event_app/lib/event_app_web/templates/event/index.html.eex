<h1>Listing Events</h1>

<div class="container">
    <%= for event <- @events do %>
    <%= if is_subscriber?(@conn, event) do %>
    <div class="card">
        <div class="card-body">
            <p>Name:<%= event.name %></p>
            <p>Date:<%= event.date %></p>
            <p>Description:<%= event.description %></p>
            <p><%= link "Select", to: Routes.event_path(@conn, :show, event.id) %></p>
        </div>
    </div>
    <% end %>
</div>

<% end %>
